{
  "name": "store-p2p",
  "description": "",
  "main": "index.js",
  "pear": {
    "name": "store-p2p",
    "pre": "pear-electron/pre",
    "type": "desktop",
    "gui": {
      "main": "index.html",
      "width": 1000,
      "height": 700,
      "minWidth": 500
    }
  },
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "npm run css:watch & pear run -d .",
    "css": "tailwindcss -i ./styles/input.css -o ./styles/output.css",
    "css:watch": "tailwindcss -i ./styles/input.css -o ./styles/output.css --watch",
    "build": "tailwindcss -i ./styles/input.css -o ./styles/output.css --minify",
    "build-app": "npm run build && pear build ."
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "brittle": "^3.0.0",
    "pear-interface": "^1.0.0",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "pear-bridge": "^1.2.1",
    "pear-electron": "^1.7.25",
    "pear-messages": "^1.0.3",
    "pear-pipe": "^1.0.1",
    "pear-updates": "^1.0.1",
    "pear-wakeups": "^1.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
